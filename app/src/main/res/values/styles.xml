<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 상단 바 숨기기 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/main</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/gray3</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/main</item>
        <item name="colorControlHighlight">@color/main</item>
    </style>

    <style name="SavingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <style name="TopAlignedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_gravity">top</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_peekHeight">300dp</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

</resources>