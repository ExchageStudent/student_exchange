<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_back"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 등급"
            android:textSize="18sp"
            android:fontFamily="@font/pretendardbold"
            android:textColor="@color/titleblack"
            />
    </LinearLayout>

    <!-- Points Section -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/money_background"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 학년"
            android:textSize="30sp"
            android:fontFamily="@font/pretendardextrabold"
            android:textColor="@color/main"/>
    </LinearLayout>

    <!-- Accumulated Points Section -->

    <TextView
        android:id="@+id/get_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3학년"
        android:textSize="14sp"
        android:fontFamily="@font/pretendardsemibold"
        android:textColor="@color/font"
        android:layout_marginTop="37dp"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:text="기준"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="12sp"
            android:textColor="@color/gray0"
            android:background="@drawable/topic_background"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="게시글 조회수 10,000회 이상 + 찜 100회 이상"
            android:textSize="12sp"
            android:fontFamily="@font/pretendardregular"
            android:textColor="#000000"
            android:layout_marginStart="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
