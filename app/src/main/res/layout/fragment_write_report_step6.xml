<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/navigate_before" />

                <TextView
                    android:id="@+id/write_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@id/back_arrow"
                    android:layout_marginStart="20dp"
                    android:text="보고서 작성"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/saveButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/report_save"
                    android:contentDescription="@string/save" />

                <ImageView
                    android:id="@+id/previewButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toStartOf="@id/saveButton"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/report_preview"
                    android:contentDescription="@string/preview"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Step 1 -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/progress_inactive"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="1"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <!-- Step 2 -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/progress_inactive"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="2"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <!-- Step 3 -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/progress_inactive"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="3"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <!-- Step 4 -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/progress_inactive"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="4"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <!-- Step 5 -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/progress_inactive"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="5"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <!-- Step 6 -->
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/progress_active"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="원하는 부분을 꾹 눌러 수정해주세요!"
                android:textSize="16dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="36dp"
                android:text="제목"
                android:textColor="#282828"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8_gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수강 과목"
                android:layout_marginStart="36dp"
                android:textSize="16dp"
                android:textColor="@color/font"
                android:layout_marginTop="36dp"/>

            <LinearLayout
                android:id="@+id/subject_container"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8_gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기타 활동"
                android:layout_marginStart="36dp"
                android:textSize="16dp"
                android:textColor="@color/font"
                android:layout_marginTop="36dp"/>

            <LinearLayout
                android:id="@+id/etc_container"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8_gray2" />

            <!-- 이전 및 완료 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/previous_btn"
                    android:layout_width="104dp"
                    android:layout_height="52dp"
                    android:text="이전"
                    android:textColor="@color/gray"
                    android:background="@drawable/report_button_previous"/>

                <Button
                    android:id="@+id/end_btn"
                    android:layout_width="196dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="16dp"
                    android:text="작성완료"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
