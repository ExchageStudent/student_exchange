<!-- res/layout/dialog_add_review.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.widget.ImageView
            android:id="@+id/delete_x"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete_x"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="수강과목 후기 추가하기"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#282828"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="0/200"
            android:textSize="12dp"
            android:textColor="#ADADAD" />

        <TextView
            android:id="@+id/reset_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:textSize="12dp"
            android:textColor="#ADADAD"
            android:drawableStart="@drawable/ic_reset_20size"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <EditText
        android:id="@+id/review_input"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:textColorHint="#ADADAD"
        android:hint="내용을 자유롭게 입력해 주세요."
        android:background="@drawable/oval_background_8_gray2"
        android:padding="16dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLength="200"
        tools:ignore="Autofill,KeyboardNavigationCluster" />

    <Button
        android:id="@+id/button_add_review"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:text="등록"
        android:background="@drawable/report_button_previous"
        android:textColor="@android:color/white"
        android:enabled="false"
        android:layout_marginTop="32dp" />

</LinearLayout>
