<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/delete_x"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_delete_x" />

                <TextView
                    android:id="@+id/write_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@id/delete_x"
                    android:layout_marginStart="20dp"
                    android:text="보고서 작성"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/report_title"
                android:layout_width="340dp"
                android:layout_height="56dp"
                android:background="@drawable/oval_background_8"
                android:layout_gravity="center"
                android:text="보고서 제목"
                android:textSize="16sp"
                android:textColor="#282828"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수강 과목"
                android:layout_marginStart="36dp"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:layout_marginTop="36dp" />

            <LinearLayout
                android:id="@+id/subject_container"
                android:layout_width="312dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기타 활동"
                android:layout_marginStart="36dp"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:layout_marginTop="36dp" />

            <LinearLayout
                android:id="@+id/etc_container"
                android:layout_width="312dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="참가 후 얻은 것"
                android:layout_marginStart="36dp"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:layout_marginTop="36dp" />

            <LinearLayout
                android:id="@+id/gain_container"
                android:layout_width="312dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="장점"
                android:layout_marginStart="36dp"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:layout_marginTop="36dp" />

            <LinearLayout
                android:id="@+id/merits_container"
                android:layout_width="312dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="단점"
                android:layout_marginStart="36dp"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:layout_marginTop="36dp" />

            <LinearLayout
                android:id="@+id/dismerits_container"
                android:layout_width="312dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:paddingStart="24dp"
                android:background="@drawable/oval_background_8" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
